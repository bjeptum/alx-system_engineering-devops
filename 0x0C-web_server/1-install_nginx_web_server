#!/usr/bin/env bash
# Install Nginx
CONFIG_FILE="/etc/nginx/sites-available/incredibles.tech"
sudo apt-get update
sudo apt-get install -y nginx

#Adjust the firewall
sudo ufw allow 'Nginx HTTP'

# Configure Nginx to listen on port 80
sudo tee "$CONFIG_FILE" <<EOF
server {
    listen 80;
    server_name incredibles.tech;
}
EOF

#Configure Nginx to return "Hello World!" at the root path
echo "Hello World!" > /var/www/incredibles.tech/html/index.html

# Restart Nginx
sudo nginx -t
sudo service Nginx restart
