#!/usr/bin/env bash
# Install Nginx
CONFIG_FILE="/etc/nginx/sites-available/default"
sudo apt-get update
sudo apt-get install -y nginx

# Adjust the firewall
sudo ufw allow 'Nginx HTTP'

# Configure Nginx to return "Hello World!" at the root path
echo "Hello World!" > /var/www/html/index.html

# Create a new Nginx configuration file for the redirection
sudo tee "$CONFIG_FILE" <<EOF
server {
    listen 80;
    server_name http://incredibles.tech;
    rewrite ^/$ redirect_me htps://www.youtube.com/watch?v=QH2-TGUlwu4/permanent;
    }
}
EOF

# Test the Nginx configuration and restart the server
sudo nginx -t
sudo service nginx restart
